<div class="container">
  <div class="d-flex justify-content-between align-items-center my-4">
    <h1>All Posts</h1>
    <%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>
  </div>
  
  <% if @posts.any? %>
    <% @posts.each do |post| %>
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title"><%= link_to post.title, post %></h2>
          <p class="card-text"><%= truncate(post.content, length: 150) %></p>
          <p class="card-text"><small class="text-muted">Created at <%= post.created_at.strftime("%B %e, %Y") %></small></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="alert alert-info" role="alert">
      No posts available. <%= link_to 'Create a new post', new_post_path %>
    </div>
  <% end %>
</div>
